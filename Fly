-- Animation functions
local function createButtonAnimation(button)
    local originalSize = button.Size
    local hoverSize = UDim2.new(originalSize.X.Scale, originalSize.X.Offset + 5, originalSize.Y.Scale, originalSize.Y.Offset + 2)
    
    button.MouseEnter:Connect(function()
        local tween = TweenService:Create(button, TweenInfo.new(0.2), {Size = hoverSize})
        tween:Play()
    end)
    
    button.MouseLeave:Connect(function()
        local tween = TweenService:Create(button, TweenInfo.new(0.2), {Size = originalSize})
        tween:Play()
    end)
end

-- Apply animations
createButtonAnimation(executeButton)
createButtonAnimation(submitButton)
createButtonAnimation(getKeyButton)
createButtonAnimation(helpButton)

-- Notification function
local function showNotification(message, color)
    local notification = Instance.new("Frame")
    notification.Name = "Notification"
    notification.Parent = screenGui
    notification.BackgroundColor3 = color or Color3.fromRGB(76, 175, 80)
    notification.BorderSizePixel = 0
    notification.Position = UDim2.new(0.5, -150, 0, -50)
    notification.Size = UDim2.new(0, 300, 0, 40)
    
    local notifCorner = Instance.new("UICorner")
    notifCorner.CornerRadius = UDim.new(0, 8)
    notifCorner.Parent = notification
    
    local notifText = Instance.new("TextLabel")
    notifText.Parent = notification
    notifText.BackgroundTransparency = 1
    notifText.Size = UDim2.new(1, 0, 1, 0)
    notifText.Font = Enum.Font.Gotham
    notifText.Text = message
    notifText.TextColor3 = Color3.fromRGB(255, 255, 255)
    notifText.TextSize = 14
    
    -- Slide in
    local slideIn = TweenService:Create(notification, TweenInfo.new(0.3), {Position = UDim2.new(0.5, -150, 0, 20)})
    slideIn:Play()
    
    -- Slide out after delay
    wait(2)
    local slideOut = TweenService:Create(notification, TweenInfo.new(0.3), {Position = UDim2.new(0.5, -150, 0, -50)})
    slideOut:Play()
    slideOut.Completed:Connect(function()
        notification:Destroy()
    end)
end

-- Button Functions
executeButton.MouseButton1Click:Connect(function()
    showNotification("Executing Free Script...", Color3.fromRGB(76, 175, 80))
    
    -- Execute the free script
    pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Sddnin4/Mila/refs/heads/main/Hub"))()
    end)
end)

submitButton.MouseButton1Click:Connect(function()
    local enteredKey = keyInput.Text
    
    if enteredKey == "" then
        showNotification("Please enter a key!", Color3.fromRGB(244, 67, 54))
        return
    end
    
    if enteredKey == correctPassword then
        showNotification("Key accepted! Loading premium script...", Color3.fromRGB(76, 175, 80))
        statusLabel.Text = "Status: Active"
        statusLabel.TextColor3 = Color3.fromRGB(76, 175, 80)
        statusDot.BackgroundColor3 = Color3.fromRGB(76, 175, 80)
        
        -- Execute the premium script
        wait(1)
        pcall(function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/Sddnin4/Mila/refs/heads/main/Ui%20Loading"))()
        end)
        
    else
        showNotification("Invalid key! Please try again.", Color3.fromRGB(244, 67, 54))
        keyInput.Text = ""
    end
end)

getKeyButton.MouseButton1Click:Connect(function()
    showNotification("Key: " .. correctPassword, Color3.fromRGB(33, 150, 243))
end)

helpButton.MouseButton1Click:Connect(function()
    showNotification("Contact support for help!", Color3.fromRGB(156, 39, 176))
end)

closeButton.MouseButton1Click:Connect(function()
    local closeTween = TweenService:Create(mainFrame, TweenInfo.new(0.3), {
        Size = UDim2.new(0, 0, 0, 0),
        Position = UDim2.new(0.5, 0, 0.5, 0)
    })
    closeTween:Play()
    closeTween.Completed:Connect(function()
        screenGui:Destroy()
    end)
end)

-- Enter key support for key input
keyInput.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        submitButton.MouseButton1Click:Fire()
    end
end)

-- Initial animation
mainFrame.Size = UDim2.new(0, 0, 0, 0)
mainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)

local openTween = TweenService:Create(mainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back), {
    Size = UDim2.new(0, 400, 0, 400),
    Position = UDim2.new(0.5, -200, 0.5, -200)
})
openTween:Play()

print("Scripts Hub loaded successfully!")