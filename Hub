-- Button Creation Function
local function createButton(parent, name, text, position, size, callback)
    local button = Instance.new("TextButton")
    button.Name = name
    button.Size = size or UDim2.new(0, 140, 0, 30)
    button.Position = position
    button.BackgroundColor3 = Color3.fromRGB(255, 182, 193)
    button.Text = text
    button.TextColor3 = Color3.new(0.3, 0, 0.3)
    button.TextSize = 12
    button.Font = Enum.Font.Gotham
    button.Parent = parent
    
    local buttonCorner = Instance.new("UICorner")
    buttonCorner.CornerRadius = UDim.new(0, 8)
    buttonCorner.Parent = button
    
    button.MouseButton1Click:Connect(callback)
    
    -- Hover effect
    button.MouseEnter:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(255, 192, 203)
    end)
    
    button.MouseLeave:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(255, 182, 193)
    end)
    
    return button
end

