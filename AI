-- HÃ m táº¡o tin nháº¯n vá»›i animation
local function createMessage(text, isBot)
	msgCount = msgCount + 1
	counterLabel.Text = "Messages: " .. msgCount
	
	local msgFrame = Instance.new("Frame")
	msgFrame.Size = UDim2.new(0.75, 0, 0, 0)
	msgFrame.BackgroundColor3 = isBot and Color3.fromRGB(50, 130, 220) or Color3.fromRGB(80, 180, 100)
	msgFrame.BorderSizePixel = 0
	msgFrame.Position = isBot and UDim2.new(0, 0, 0, 0) or UDim2.new(0.25, 0, 0, 0)
	msgFrame.BackgroundTransparency = 1
	
	local msgCorner = Instance.new("UICorner")
	msgCorner.CornerRadius = UDim.new(0, 14)
	msgCorner.Parent = msgFrame
	
	local msgGradient = Instance.new("UIGradient")
	if isBot then
		msgGradient.Color = ColorSequence.new({
			ColorSequenceKeypoint.new(0, Color3.fromRGB(60, 140, 230)),
			ColorSequenceKeypoint.new(1, Color3.fromRGB(40, 120, 210))
		})
	else
		msgGradient.Color = ColorSequence.new({
			ColorSequenceKeypoint.new(0, Color3.fromRGB(90, 190, 110)),
			ColorSequenceKeypoint.new(1, Color3.fromRGB(70, 170, 90))
		})
	end
	msgGradient.Rotation = 45
	msgGradient.Parent = msgFrame
	
	local msgText = Instance.new("TextLabel")
	msgText.Size = UDim2.new(1, -20, 1, 0)
	msgText.Position = UDim2.new(0, 10, 0, 0)
	msgText.BackgroundTransparency = 1
	msgText.Text = text
	msgText.TextColor3 = Color3.fromRGB(255, 255, 255)
	msgText.TextSize = 14
	msgText.Font = Enum.Font.Gotham
	msgText.TextWrapped = true
	msgText.TextXAlignment = Enum.TextXAlignment.Left
	msgText.TextYAlignment = Enum.TextYAlignment.Top
	msgText.Parent = msgFrame
	
	local textSize = game:GetService("TextService"):GetTextSize(text, 14, Enum.Font.Gotham, Vector2.new(230, math.huge))
	msgFrame.Size = UDim2.new(0.75, 0, 0, math.max(textSize.Y + 20, 40))
	
	msgFrame.Parent = chatContainer
	
	-- Fade in animation
	TweenService:Create(msgFrame, TweenInfo.new(0.3, Enum.EasingStyle.Back), {BackgroundTransparency = 0}):Play()
	
	chatContainer.CanvasSize = UDim2.new(0, 0, 0, listLayout.AbsoluteContentSize.Y + 10)
	chatContainer.CanvasPosition = Vector2.new(0, chatContainer.CanvasSize.Y.Offset)
end

-- Typing indicator
local typingIndicator = Instance.new("Frame")
typingIndicator.Size = UDim2.new(0, 60, 0, 35)
typingIndicator.BackgroundColor3 = Color3.fromRGB(50, 130, 220)
typingIndicator.BorderSizePixel = 0
typingIndicator.Visible = false

local typingCorner = Instance.new("UICorner")
typingCorner.CornerRadius = UDim.new(0, 14)
typingCorner.Parent = typingIndicator

local dot1 = Instance.new("Frame")
dot1.Size = UDim2.new(0, 8, 0, 8)
dot1.Position = UDim2.new(0, 12, 0.5, -4)
dot1.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
dot1.BorderSizePixel = 0
dot1.Parent = typingIndicator

local dot1Corner = Instance.new("UICorner")
dot1Corner.CornerRadius = UDim.new(1, 0)
dot1Corner.Parent = dot1

local dot2 = dot1:Clone()
dot2.Position = UDim2.new(0, 26, 0.5, -4)
dot2.Parent = typingIndicator

local dot3 = dot1:Clone()
dot3.Position = UDim2.new(0, 40, 0.5, -4)
dot3.Parent = typingIndicator

-- Animate typing indicator
local function animateTyping()
	spawn(function()
		while typingIndicator.Visible do
			TweenService:Create(dot1, TweenInfo.new(0.4), {Position = UDim2.new(0, 12, 0.5, -8)}):Play()
			wait(0.15)
			TweenService:Create(dot2, TweenInfo.new(0.4), {Position = UDim2.new(0, 26, 0.5, -8)}):Play()
			wait(0.15)
			TweenService:Create(dot3, TweenInfo.new(0.4), {Position = UDim2.new(0, 40, 0.5, -8)}):Play()
			wait(0.4)
			TweenService:Create(dot1, TweenInfo.new(0.4), {Position = UDim2.new(0, 12, 0.5, -4)}):Play()
			TweenService:Create(dot2, TweenInfo.new(0.4), {Position = UDim2.new(0, 26, 0.5, -4)}):Play()
			TweenService:Create(dot3, TweenInfo.new(0.4), {Position = UDim2.new(0, 40, 0.5, -4)}):Play()
			wait(0.6)
		end
	end)
end

-- HÃ m tÃ¬m cÃ¢u tráº£ lá»i
local function getBotResponse(userMessage)
	local lowerMsg = string.lower(userMessage)
	
	for pattern, response in pairs(qaDatabase) do
		if string.match(lowerMsg, pattern) then
			return response
		end
	end
	
	local defaultResponses = {
		"I'm not sure about that. Can you ask something else? ğŸ¤”",
		"Hmm, I don't have info on that. Try asking about gameplay or scripting! ğŸ’­",
		"Interesting question! But I might need to learn more. Ask me about Roblox tips! ğŸ®",
		"I'm still learning! Try: 'How to find diamonds?' or 'Best class?' ğŸ“š",
		"That's a tough one! Ask me about quests, building, or combat! âš”ï¸",
	}
	return defaultResponses[math.random(1, #defaultResponses)]
end

-- Welcome message
createMessage("Welcome to AI Helper V2! ğŸ‰ I'm smarter and faster now!", true)
wait(0.5)
createMessage("Ask me anything about Roblox! Try 'help' to see what I can do! ğŸ˜Š", true)

-- Xá»­ lÃ½ gá»­i tin nháº¯n
local function sendMessage()
	local msg = textBox.Text
	if msg ~= "" and msg ~= " " then
		createMessage(msg, false)
		textBox.Text = ""
		
		-- Show typing indicator
		typingIndicator.Parent = chatContainer
		typingIndicator.Visible = true
		animateTyping()
		chatContainer.CanvasSize = UDim2.new(0, 0, 0, listLayout.AbsoluteContentSize.Y + 10)
		chatContainer.CanvasPosition = Vector2.new(0, chatContainer.CanvasSize.Y.Offset)
		
		-- Simulate thinking time
		wait(math.random(5, 15) / 10)
		
		-- Hide typing indicator
		typingIndicator.Visible = false
		typingIndicator.Parent = nil
		
		local response = getBotResponse(msg)
		createMessage(response, true)
	end
end

sendBtn.MouseButton1Click:Connect(function()
	-- Button press animation
	TweenService:Create(sendBtn, TweenInfo.new(0.1), {Size = UDim2.new(0, 40, 0, 40)}):Play()
	wait(0.1)
	TweenService:Create(sendBtn, TweenInfo.new(0.1), {Size = UDim2.new(0, 45, 0, 45)}):Play()
	sendMessage()
end)

textBox.FocusLost:Connect(function(enterPressed)
	if enterPressed then 
		sendMessage() 
	end
end)

-- ÄÃ³ng UI vá»›i animation
closeBtn.MouseButton1Click:Connect(function()
	TweenService:Create(mainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In), {
		Size = UDim2.new(0, 0, 0, 0),
		Position = UDim2.new(0.5, 0, 0.5, 0)
	}):Play()
	wait(0.3)
	screenGui:Destroy()
end)

-- Thu gá»n/Má»Ÿ rá»™ng vá»›i smooth animation
local isMinimized = false
minimizeBtn.MouseButton1Click:Connect(function()
	isMinimized = not isMinimized
	if isMinimized then
		-- Thu gá»n: chá»‰ hiá»‡n header
		TweenService:Create(mainFrame, TweenInfo.new(0.4, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {
			Size = UDim2.new(0, 340, 0, 65)
		}):Play()
		
		-- áº¨n cÃ¡c pháº§n tá»­
		TweenService:Create(chatContainer, TweenInfo.new(0.3), {
			BackgroundTransparency = 1,
			ScrollBarImageTransparency = 1
		}):Play()
		TweenService:Create(inputContainer, TweenInfo.new(0.3), {
			BackgroundTransparency = 1
		}):Play()
		TweenService:Create(counterLabel, TweenInfo.new(0.3), {
			TextTransparency = 1
		}):Play()
		
		for _, child in pairs(chatContainer:GetChildren()) do
			if child:IsA("Frame") then
				TweenService:Create(child, TweenInfo.new(0.2), {BackgroundTransparency = 1}):Play()
			end
		end
		
		minimizeBtn.Text = "â˜°"
		wait(0.3)
		chatContainer.Visible = false
		inputContainer.Visible = false
		counterLabel.Visible = false
	else
		-- Má»Ÿ rá»™ng: hiá»‡n táº¥t cáº£
		chatContainer.Visible = true
		inputContainer.Visible = true
		counterLabel.Visible = true
		
		TweenService:Create(mainFrame, TweenInfo.new(0.4, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {
			Size = UDim2.new(0, 340, 0, 450)
		}):Play()
		
		wait(0.2)
		
		TweenService:Create(chatContainer, TweenInfo.new(0.3), {
			BackgroundTransparency = 1,
			ScrollBarImageTransparency = 0
		}):Play()
		TweenService:Create(inputContainer, TweenInfo.new(0.3), {
			BackgroundTransparency = 0
		}):Play()
		TweenService:Create(counterLabel, TweenInfo.new(0.3), {
			TextTransparency = 0
		}):Play()
		
		for _, child in pairs(chatContainer:GetChildren()) do
			if child:IsA("Frame") then
				TweenService:Create(child, TweenInfo.new(0.3), {BackgroundTransparency = 0}):Play()
			end
		end
		
		minimizeBtn.Text = "â”€"
	end
end)

-- KÃ©o tháº£ UI (improved)
local dragging, dragInput, dragStart, startPos

local function update(input)
	local delta = input.Position - dragStart
	TweenService:Create(mainFrame, TweenInfo.new(0.05, Enum.EasingStyle.Linear), {
		Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	}):Play()
end

header.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = mainFrame.Position
		
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

header.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		dragInput = input
	end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		update(input)
	end
end)

-- Notifications system
local function showNotification(text)
	local notif = Instance.new("Frame")
	notif.Size = UDim2.new(0, 250, 0, 60)
	notif.Position = UDim2.new(1, 10, 0, 10)
	notif.BackgroundColor3 = Color3.fromRGB(30, 30, 45)
	notif.BorderSizePixel = 0
	notif.Parent = screenGui
	
	local notifCorner = Instance.new("UICorner")
	notifCorner.CornerRadius = UDim.new(0, 12)
	notifCorner.Parent = notif
	
	local notifStroke = Instance.new("UIStroke")
	notifStroke.Color = Color3.fromRGB(0, 200, 255)
	notifStroke.Thickness = 2
	notifStroke.Parent = notif
	
	local notifText = Instance.new("TextLabel")
	notifText.Size = UDim2.new(1, -20, 1, 0)
	notifText.Position = UDim2.new(0, 10, 0, 0)
	notifText.BackgroundTransparency = 1
	notifText.Text = text
	notifText.TextColor3 = Color3.fromRGB(255, 255, 255)
	notifText.TextSize = 13
	notifText.Font = Enum.Font.Gotham
	notifText.TextWrapped = true
	notifText.Parent = notif
	
	-- Slide in
	TweenService:Create(notif, TweenInfo.new(0.4, Enum.EasingStyle.Back), {
		Position = UDim2.new(1, -260, 0, 10)
	}):Play()
	
	-- Auto hide
	wait(3)
	TweenService:Create(notif, TweenInfo.new(0.3), {
		Position = UDim2.new(1, 10, 0, 10)
	}):Play()
	wait(0.3)
	notif:Destroy()
end

-- Easter egg: Secret command
textBox:GetPropertyChangedSignal("Text"):Connect(function()
	if string.lower(textBox.Text) == "/secret" then
		showNotification("ğŸ‰ Secret unlocked! V2 is awesome!")
		textBox.Text = ""
	elseif string.lower(textBox.Text) == "/clear" then
		for _, child in pairs(chatContainer:GetChildren()) do
			if child:IsA("Frame") then
				child:Destroy()
			end
		end
		msgCount = 0
		counterLabel.Text = "Messages: 0"
		textBox.Text = ""
		createMessage("Chat cleared! Ready for new conversation! ğŸ§¹", true)
	end
end)

-- Show welcome notification
wait(1)
showNotification("ğŸ’¡ Tip: Type /secret or /clear for special commands!")

print("ğŸ¤– Roblox AI Helper V2 loaded successfully!")